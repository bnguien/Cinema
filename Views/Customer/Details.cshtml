@model MyMVCApp.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2>@ViewData["Title"]</h2>

<p><strong>ID: </strong>@Model.Id</p>
<p><strong>Name: </strong>@Model.Name</p>
<p><strong>Membership Type: </strong> @(Model.MembershipType != null ? Model.MembershipType.Name : "N/A")</p>
<p><strong>Is Subscribed to Newsletter: </strong> @Model.IsSubscribedToNewsletter</p>

@if (Model.Birthdate.HasValue)
{
    <p><strong>Birthdate: </strong> @Model.Birthdate.Value.ToString("dd/MM/yyyy")</p>
}
else
{
    <p><strong>Birthdate: </strong> N/A</p>
}

<a href="@Url.Action("Index", "Customer")"><button class="btn btn-Back">Back to List</button></a>
<a href="@Url.Action("Edit", "Customer", new { id = Model.Id })"><button class="btn btn-primary">Edit</button></a>
<a href="@Url.Action("Delete", "Customer", new { id = Model.Id })">
    <button class="btn btn-danger">Delete</button>
</a>
