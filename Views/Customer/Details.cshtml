@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    <li>Birthdate: @(Model.Birthdate?.ToShortDateString() ?? "N/A")</li>
    <li>Subscribed to Newsletter: @Model.IsSubscribedToNewsletter</li>
</ul>

<div>
    <button class="btn btn-primary" data-url="@Url.Action("Edit", "Customer", new { id = Model.Id })" onclick="redirectToUrl(this)">
        Edit
    </button>
    <button class="btn btn-info" data-url="@Url.Action("Index", "Customer")" onclick="redirectToUrl(this)">
        Back to List
    </button>
</div>

<script>
    function redirectToUrl(button) {
        window.location.href = button.getAttribute("data-url");
    }
</script>
